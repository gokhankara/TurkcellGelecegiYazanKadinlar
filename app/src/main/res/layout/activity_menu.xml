<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnOpenFotoAndVideo"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Fotoğraf Video"
                android:textColor="@color/ColorMenuActivityButtonWhite"
                android:background="@android:color/holo_green_light"/>

            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/btnSesKayit"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Ses Kayıt İşlemi"
                android:textColor="@color/ColorMenuActivityButtonWhite"
                android:background="@android:color/holo_blue_light"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/open_map"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Haritaya Git"
                android:textColor="@color/ColorMenuActivityButtonWhite"
                android:background="@android:color/holo_purple" />

            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/btnWebSayfasi"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Web Sayfasına Git"
                android:textColor="@color/ColorMenuActivityButtonWhite"
                android:background="@android:color/holo_orange_dark"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnSmsGonder"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_width="150dp"
                android:text="Sms Gönder"
                android:textColor="@color/ColorMenuActivityButtonWhite"
                android:background="#000000"/>

            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/btnAramaYap"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Arama Yap"
                android:textColor="@color/ColorMenuActivityButtonWhite"
                android:background="@android:color/holo_red_dark"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>