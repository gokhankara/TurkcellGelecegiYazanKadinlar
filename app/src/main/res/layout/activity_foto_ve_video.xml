<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".FotoVeVideo">

    <ImageView
        android:id="@+id/imgViewOnizleme"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp" />

    <VideoView
        android:id="@+id/videoViewOnizleme"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/imgViewOnizleme"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoViewOnizleme"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnFotoCek"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Video Kayıt" />

        <Button
            android:id="@+id/btnVideoCek"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Fotoğraf Çek" />
    </LinearLayout>
</RelativeLayout>